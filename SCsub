#!/usr/bin/env python
#SCsub

import version
Import ("env")
Import ("env_modules")
env_cripter = env_modules.Clone()


thirdparty_dir = "#thirdparty/mbedtls/include/"
env_cripter.Append(CPPPATH=[thirdparty_dir]) # this is a relative path

env_cripter.add_source_files(env.modules_sources, "*.cpp")

if version.major == 4:
	env_cripter.Append(CPPDEFINES=["GD4"])
