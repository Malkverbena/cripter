#!/usr/bin/env python


import version
Import("env")
env_cripter = env.Clone()


env_cripter.Append(CPPFLAGS=[
	'-std=c++20',
])


if version.major == 4:
	env_cripter.Append(CPPDEFINES=["GD4"])


env_cripter.Prepend(CPPPATH=["#thirdparty/mbedtls/include"])
env_cripter.add_source_files(env.modules_sources, "*.cpp")